<?xml version="1.0"?>
<!-- Simple Robot -->
<!--
Copied and modified from ROS1 example -
https://github.com/ros-simulation/gazebo_ros_demos/blob/kinetic-devel/rrbot_description/urdf/rrbot.xacro
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_robot">
	<xacro:include filename="inertial_macros.xacro"/>
	<link name="base_link">
	</link>

	<!-- Chassis Link-->
	<joint name="base_chassis_joint" type="fixed">
		<parent link="base_link"/>
		<child link="chassis"/>
		<origin xyz="0.02 0.0 0.0325"/>
	</joint>
	<link name="chassis">

		<visual>
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
			<geometry>
				<box size="0.2 0.2 0.065"/>
			</geometry>
			<material name="Cyan">
				<color rgba="0.8 1.0 1.0 1.0"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<box size="0.2 0.2 0.065"/>
			</geometry>
		</collision>
		<xacro:inertial_box mass="0.5" x="0.2" y="0.2" z="0.065" >
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
		</xacro:inertial_box>
	</link>
	<!--left wheel link-->
	<joint name="left_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0 0.12 0" rpy="-${pi/2} 0 0"/>
	</joint>

	<link name="left_wheel">
		<visual>
			<geometry>
				<cylinder radius="0.0325" length="0.04"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<cylinder radius="0.0325" length="0.04"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.0325">
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
		</xacro:inertial_cylinder>
	</link>
	<!--right wheel link-->
	<joint name="right_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0 -0.12 0" rpy="${pi/2} 0 0"/>
	</joint>

	<link name="right_wheel">
		<visual>
			<geometry>
				<cylinder radius="0.0325" length="0.04"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<cylinder radius="0.0325" length="0.04"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.0325">
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
		</xacro:inertial_cylinder>
	</link>

	<!--caster wheel link-->
	<joint name="caster_wheel_joint" type="fixed">
		<parent link="chassis"/>
		<child link="caster_wheel"/>
		<origin xyz="0.065 0 -0.0325" rpy= "0 0 0"/>
	</joint>
	<link name="caster_wheel">
		<visual>
			<geometry>
				<sphere radius="0.0325"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<sphere radius="0.0325"/>
			</geometry>
		</collision>
		<xacro:inertial_sphere mass="0.1" radius="0.0325">
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_sphere>
	</link>
	<!--lidar-->
	<joint name="laser_joint" type="fixed">
		<parent link="chassis"/>
		<child link="laser_frame"/>
		<origin xyz="0.0 0 0.065" rpy="0 0 0"/>
	</joint>

	<link name="laser_frame">
		<visual>
			<geometry>
				<cylinder radius="0.05" length="0.04"/>
			</geometry>
		</visual>
		<visual>
			<origin xyz="0 0 -0.05"/>
			<geometry>
				<cylinder radius="0.01" length="0.075"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<cylinder radius="0.05" length="0.04"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_cylinder>
	</link>
</robot>